    /rosbridge_websocket/set_parameters_atomically, /webauto/shutdown, /webauto/update_vehicle_maps, /webauto/update_vehicle_software,
    /api/autoware/set/engage, /api/external/set/clear_route, /api/external/set/emergency,  /api/external/set/engage, /api/external/set/route"/>

    <group>
        <include file="$(find-pkg-share rosbridge_server)/launch/rosbridge_websocket_launch.xml">
            <arg name="respawn" value="$(var respawn_rosbridge)"/>
            <arg name="topics_glob" value="$(var topics_glob)"/>
            <arg name="services_glob" value="$(var services_glob)"/>-->
        </include>
    </group>
</launch>